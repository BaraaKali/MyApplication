<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

 <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
         android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/name_information"
    android:textColor="#000000"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="10dp"
    android:textSize="24dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_first_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/first_name"
            android:layout_margin="20dp"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_father_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/father_name"
            android:layout_margin="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_grand_father_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText

            android:id="@+id/editText_grand_father_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/grand_father_name"
            android:layout_margin="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_family_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_family_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/family_name"
            android:layout_margin="20dp"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/text_input_layout_number_family_member"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_number_family_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/number_family_member"
            android:layout_margin="20dp"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button"
        >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/personal_information"
             android:textColor="#000000"
             android:textSize="24dp"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="10dp"/>

         <TextView
             android:id="@+id/textView_gender"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="20dp"
             android:text="@string/gender"
             android:textSize="18sp" />

         <RadioGroup
             android:id="@+id/radioGroup_gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_margin="20dp"
            >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gender1"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gender2" />
        </RadioGroup>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_id_number"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
        <EditText
            android:id="@+id/editText_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="@string/id_number"
            android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>

         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_margin="10dp">

             <ImageView
                 android:id="@+id/imageView"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:layout_weight="1"
                 android:onClick="pickDate"
                 app:srcCompat="@android:drawable/ic_input_get" />

             <TextView


                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="@string/date_birth" />

             <TextView
                 android:id="@+id/textView_date_birth"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 />

         </LinearLayout>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_place_birth"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_place_birth"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/place_birth"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>

     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_margin="10dp"
         android:background="@drawable/shape_button"
         >

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/contact_information"
             android:textColor="#000000"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="10dp"
             android:textSize="24dp"/>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_passport_number"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_passport_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="number"
             android:hint="@string/passport_number"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>


         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_telephone_number"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_telephone_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="number"
             android:hint="@string/telephone_number"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_mobile_number"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_mobile_number"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="number"
             android:hint="@string/mobile_number"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_email"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

         <EditText
             android:id="@+id/editText_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textEmailAddress"
             android:hint="@string/email"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>


         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_fax"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_fax"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="number"
             android:hint="@string/fax"
             android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>
     </LinearLayout>
     <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_margin="10dp"
     android:background="@drawable/shape_button"
     >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/address_information"
             android:textColor="#000000"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="10dp"
             android:textSize="24dp"/>

     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout_work"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_work"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/work"
             android:layout_margin="20dp"/>
     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout_address"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_address"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/address"
             android:layout_margin="20dp"/>
     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout_street"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_street"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/street"
             android:layout_margin="20dp"/>
     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout_region"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_region"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/region"
             android:layout_margin="20dp"/>
     </android.support.design.widget.TextInputLayout>

     <android.support.design.widget.TextInputLayout
         android:id="@+id/text_input_layout_zone"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <EditText
             android:id="@+id/editText_zone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:hint="@string/zone"
             android:layout_margin="20dp"/>
     </android.support.design.widget.TextInputLayout>
 </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_margin="10dp"
         android:background="@drawable/shape_button"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/account_information"
             android:textColor="#000000"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_marginTop="10dp"
             android:textSize="24dp"/>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_username"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <EditText
                 android:id="@+id/editText_New_username"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="textPersonName"
                 android:hint="@string/user_name"
                 android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>

         <android.support.design.widget.TextInputLayout
             android:id="@+id/text_input_layout_password"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <EditText
                 android:id="@+id/editText_New_password"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:inputType="textPassword"
                 android:hint="@string/password"
                 android:layout_margin="20dp"/>
         </android.support.design.widget.TextInputLayout>


     </LinearLayout>

     <Button
         android:id="@+id/button_submit"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/submit"
         android:layout_margin="20dp"
         android:background="@color/colorAccent"
         android:textSize="18sp"
         android:textStyle="bold"/>

 </LinearLayout>

    </ScrollView>
</RelativeLayout>